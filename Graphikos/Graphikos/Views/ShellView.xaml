<UserControl x:Class="Graphikos.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             Width="500" Height="300">
    <StackPanel Orientation="Horizontal">
        <TextBlock Width="400" FontSize="50" x:Name="SomeMessage" Background="White"/>
        <TextBox  Width="90" x:Name="Input" cal:Message.Attach="[Event KeyDown] = [Action Evaluate($eventArgs)]"></TextBox>
    </StackPanel>
</UserControl>
